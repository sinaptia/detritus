#!/bin/bash
echo "### Project Structure"
find . -maxdepth 2 -not -path '*/.*' | sed -e "s/[^-][^\/]*\// |/g" -e "s/|\([^ ]\)/|-\1/"

echo -e "\n### Language Stats"
find . -type f -not -path '*/.*' | sed 's/.*\.//' | sort | uniq -c | sort -nr | head -n 5

echo -e "\n### Main Entry Points / Configs"
find . -maxdepth 2 \( -name "package.json" -o -name "Gemfile" -o -name "requirements.txt" -o -name "go.mod" -o -name "main.*" -o -name "index.*" -o -name "app.rb" -o -name "README.md" \) -not -path '*/.*'

echo -e "\n### Project Memory"
find . \( -name "CLAUDE.md" -o -name "DETRITUS.md" -o -name "AGENTS.md" \) -not -path '*/.*' -exec cat {} \;
